<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FastDLX.ViewModels"
        x:Class="FastDLX.Views.MainWindow"
        Title="FastDLX Updater"
        Width="500" Height="320">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="FastDL Server URL:"/>
        <TextBox Text="{Binding FastDlUrl}" Watermark="http://example.com/fastdl/" />

        <TextBlock Text="Local Game Folder:"/>
        <StackPanel Orientation="Horizontal" Spacing="5">
            <TextBox Text="{Binding GameDirectory}" Width="350"/>
            <Button Content="Browse" Command="{Binding BrowseCommand}"/>
        </StackPanel>

        <Button Content="Update Files" Command="{Binding StartUpdateCommand}" Margin="0,10,0,0"/>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}"/>
        <TextBlock Text="{Binding Status}" Foreground="Gray"/>
    </StackPanel>
    
</Window>
